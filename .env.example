# Database (NeonDB)
# For NeonDB, use sslmode=verify-full
DATABASE_URL=postgresql://user:password@host.neon.tech/neondb?sslmode=verify-full

# Payload CMS
PAYLOAD_SECRET=your-secret-key-here

# Server URL
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Frontend CORS
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3001

# Redis (Upstash - for rate limiting)
REDIS_URL=rediss://default:your-password@your-endpoint.upstash.io:6379

# Cloudflare R2 Storage (optional)
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_BUCKET_NAME=vraja-marii-media
R2_PUBLIC_URL=https://media.vrajamarii.ro

# Resend Email (optional)
RESEND_API_KEY=re_xxxxxxxxxxxx
FROM_EMAIL=newsletter@vrajamarii.ro
REPLY_TO_EMAIL=hello@vrajamarii.ro
